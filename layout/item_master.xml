<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_10"
    android:paddingLeft="@dimen/padding_13"
    android:paddingRight="@dimen/padding_13"
    android:paddingTop="@dimen/padding_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/avatar" />

        <RelativeLayout
            android:id="@+id/master_info_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@id/avatar">

            <TextView
                android:id="@+id/name"
                style="@style/TextStyle.1b1.15"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邱启明"
                android:textSize="@dimen/txt_13" />
            <TextView
                android:id="@+id/profile"
                android:layout_toRightOf="@id/name"
                style="@style/TextStyle.333.13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="知名主持人,媒体人"
                android:textSize="@dimen/txt_13" />
            <TextView
                android:id="@+id/answer_focus_count"
                style="@style/TextStyle.666.12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/padding_5"
                android:text="10个关注 , 100个回答"
                android:textSize="@dimen/txt_13" />

            <TextView
                android:id="@+id/hot"
                style="@style/TextStyle.666.10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/margin_3"
                android:text="人气: 1123"
                android:textSize="@dimen/txt_13" />

            <TextView
                android:id="@+id/follow"
                style="@style/TextStyle.fff.13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/back_button"
                android:gravity="center_vertical"
                android:text="关注" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
