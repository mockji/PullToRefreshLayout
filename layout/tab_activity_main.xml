<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.5"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back_cff"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/tab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tab_home"
            android:gravity="center"
            android:text="@string/tab_home"
            android:textColor="@color/txt_selectable"
            android:textSize="@dimen/txt_12" />

        <TextView
            android:id="@+id/tab_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tab_follow"
            android:gravity="center"
            android:text="@string/tab_follow"
            android:textColor="@color/txt_selectable"
            android:textSize="@dimen/txt_12" />

        <TextView
            android:id="@+id/tab_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.01"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tab_discover"
            android:gravity="center"
            android:text="@string/tab_discover"
            android:textColor="@color/txt_selectable"
            android:textSize="@dimen/txt_12" />

        <TextView
            android:id="@+id/tab_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tab_me"
            android:gravity="center"
            android:text="@string/tab_me"
            android:textColor="@color/txt_selectable"
            android:textSize="@dimen/txt_12" />
    </LinearLayout>
</LinearLayout>
